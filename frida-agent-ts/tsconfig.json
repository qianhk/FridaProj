{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "lib": ["es2020"],
    "source-map": true,
    "removeComments": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
